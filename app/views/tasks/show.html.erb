<div class="container">
  <h1><%= @task.title %></h1>

  <h5>Details: <%= @task.details %></h5>
  <h5>Completed? <%= @task.completed %></h5>


  <%= link_to "home", tasks_path, class: "link btn btn-primary" %>
  <%= link_to "edit", edit_task_path, class: "link btn btn-warning" %>
  <%= link_to "delete", task_path(@task), class: "link btn btn-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{@task.title}?"} %>
</div>
